    private Pos findBlock(int index) {
        Pos x = new Pos(-100, null);
        StringItem h = head;
        while (h != null) {
            if (index <= h.size) {
                x = new Pos(index, h);
                break;
            }
            index -= h.size;
            h = h.next;
        }
        return x;
    }
    
    Поиск исключения 
     Pos st = findBlock(start);//стартовый блок
        if (st.posit < 0) throw new IndexException("Введенный номер некорректен", start); \\ корректный ли первый параметр.
    
    
    
